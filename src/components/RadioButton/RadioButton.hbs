<div class="ms-RadioButton">
  <div class="ms-ChoiceField">
    <input tabindex="-1" type="radio" class="ms-ChoiceField-input">
    <label role="{{props.type}}"
        class="ms-ChoiceField-field {{#if props.disabled}} is-disabled {{/if}}"
        tabindex="0"
        aria-checked="{{props.checked}}"
        name="{{props.name}}">
        <span class="ms-Label">{{props.label}}</span>
    </label>
  </div>
</div>